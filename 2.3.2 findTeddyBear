void findTeddyBear()
{
    while (!onBeeper())
    {
        if (frontIsClear()) 
        {
            moveForward();
        }
        else 
        {
            turnLeft();
        }
    }
}

or

void findTeddyBear () 
{
    while (!onBeeper ()) 
    {
        while (!frontIsClear ()) 
        {
            turnLeft ();
        }
        moveForward ();
    }
}
